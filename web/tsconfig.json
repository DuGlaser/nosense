{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@editor": ["src/features/editor/index"],
      "@editor/*": ["src/features/editor/*"],
      "@output-pane": ["src/features/output-pane/index"],
      "@output-pane/*": ["src/features/output-pane/*"],
      "@split-pane": ["src/features/split-pane/index"],
      "@split-pane/*": ["src/features/split-pane/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
