{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/master",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["./**/*.ts", "./**/*.tsx, ./**/package.json"]
    },
    "lint": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "lint-fix": {
      "outputs": []
    },
    "release:app": {
      "dependsOn": ["web#build"],
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint", "release:app"],
      "outputs": [],
      "inputs": ["./**/*.ts", "./**/*.tsx, ./**/package.json"]
    },
    "dev": {
      "cache": false
    }
  }
}
